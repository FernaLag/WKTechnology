@model IEnumerable<WKTechnology.Application.Services.Base.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1>Produtos</h1>

<form asp-action="Create" method="get">
    <button type="submit" class="btn btn-primary">Novo Produto</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Categoria
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                </td>
                <td class="d-flex">
                    <form asp-action="Edit" asp-route-id="@item.Id" method="get">
                        <button type="submit" class="btn btn-primary">Editar</button>
                    </form>                    
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                        <button type="submit" class="btn btn-secondary ms-2">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
